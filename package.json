{
  "name": "@lyme/monorepo",
  "version": "1.0.0",
  "scripts": {
    "init": "./tasks/init",
    "build": "npm run build --workspaces --if-present",
    "dev": "concurrently -n server,website -c blue,green \"npm:dev:server\" \"npm:dev:website\"",
    "dev:server": "npm run dev --workspace=./src/server",
    "dev:website": "npm run dev --workspace=./src/website",
    "migrate": "npm run migrate --workspace=./src/server"
  },
  "workspaces": [
    "src/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
