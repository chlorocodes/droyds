{
  "name": "@droyds/bots",
  "version": "1.0.0",
  "workspaces": ["src/**/*"],
  "scripts": {
    "build": "npm run build:js && npm run build:assets",
    "build:js": "tsc",
    "build:assets": "cp -r src/core/assets dist/core/assets",
    "clean": "rm -rf dist",
    "dev": "nodemon src/index.ts",
    "debug": "nodemon --exec 'node --inspect=0.0.0.0:9229 --require ts-node/register src/index.ts'",
    "start": "forever start dist/index.js",
    "stop": "forever stop dist/index.js",
    "restart": "forever restart dist/index.js",
    "deploy": "./tasks/deploy",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy"
  },
  "dependencies": {
    "@google-cloud/translate": "^7.2.2",
    "@prisma/client": "^5.3.1",
    "@remindd/cli": "^1.6.2",
    "@strdr4605/mockingcase": "^1.10.5",
    "cheerio": "^1.0.0-rc.12",
    "discord.js": "^14.12.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.18.0",
    "forever": "^4.0.3",
    "openai": "^3.3.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.32",
    "@types/node": "^20.6.2",
    "eslint": "^8.43.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "prisma": "^5.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
