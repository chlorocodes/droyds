{
  "name": "@lyme/server",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:js && npm run build:db && npm run build:assets",
    "build:js": "tsc",
    "build:db": "mkdir -p ../dist/prisma && cp -r prisma/migrations prisma/schema.prisma prisma/lyme.db ../dist/prisma",
    "build:assets": "cp -r src/assets ../dist/assets",
    "dev": "nodemon --files src/index.ts",
    "start": "forever start dist/index.js",
    "stop": "forever stop dist/index.js",
    "restart": "forever restart dist/index.js",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy --schema ./dist/prisma/schema.prisma"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/session": "^10.4.0",
    "@fastify/static": "^6.10.2",
    "@fastify/type-provider-typebox": "^3.2.0",
    "@google-cloud/translate": "^7.2.2",
    "@prisma/client": "^4.16.1",
    "@sinclair/typebox": "^0.28.19",
    "discord.js": "^14.11.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.18.0",
    "forever": "^4.0.3",
    "openai": "^3.3.0",
    "prisma": "^4.16.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.36.1",
    "@types/node": "^20.3.2",
    "eslint": "^8.43.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
