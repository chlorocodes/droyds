generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DB_URL")
}

model Session {
  id       String  @id @map("id")
  userId   String? @map("user_id")
  username String? @map("username")

  @@map("sessions")
}

model Command {
  id           String @id @default(uuid()) @map("id")
  name         String @unique @map("name")
  response     String @map("response")
  responseType String @map("response_type")

  aliases Alias[]

  @@map("commands")
}

model Alias {
  id        String @id @default(uuid()) @map("id")
  commandId String @map("command_id")
  alias     String @unique @map("alias")

  command Command @relation(fields: [commandId], references: [id])

  @@map("aliases")
}

model Suggestion {
  id         String @id @default(uuid()) @map("id")
  suggestion String @map("suggestion")

  @@map("suggestions")
}
