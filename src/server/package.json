{
  "name": "@droyds/server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --ext \"ts,json\" --exec \"ts-node-esm --files src/index.ts\"",
    "start": "forever start dist/index.js",
    "stop": "forever stop dist/index.js",
    "restart": "forever restart dist/index.js",
    "migrate": "npm run migrate:dev",
    "migrate:dev": "prisma migrate dev --schema ../core/prisma/schema.prisma",
    "migrate:deploy": "prisma migrate deploy --schema ../core/prisma/schema.prisma",
    "studio": "prisma studio --schema ../core/prisma/schema.prisma"
  },
  "dependencies": {
    "@droyds/bots": "1.0.0",
    "@droyds/core": "1.0.0",
    "@fastify/cookie": "^9.1.0",
    "@fastify/session": "^10.5.0",
    "@fastify/static": "^6.11.2",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@sinclair/typebox": "^0.31.20",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "forever": "^4.0.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.32",
    "@types/node": "^20.6.2",
    "eslint": "^8.43.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "prisma": "^5.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
